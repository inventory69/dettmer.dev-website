---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  pageTitle: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  author?: string;
}

const {
  pageTitle,
  description = "Full-Stack Developer & Sysadmin - Building Android apps, Discord bots, APIs, and self-hosted infrastructure. Python, Flutter, Kotlin, Astro.",
  image = "/images/space.webp",
  type = "website",
  publishedTime,
  author = "Fabian Dettmer"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://dettmer.dev');
const ogImage = new URL(image, Astro.site || 'https://dettmer.dev');
---

<!doctype html>
<html transition:animate="none" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Fabian Dettmer - Developer Portfolio" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Article Metadata (f체r Blog Posts) -->
    {type === 'article' && publishedTime && (
      <meta property="article:published_time" content={publishedTime} />
      <meta property="article:author" content={author} />
    )}
    
    <meta name="generator" content={Astro.generator} />
    
    <style>
      /* Prevent FOUT - Load system fonts immediately, hide body until fonts ready */
      html {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif;
      }
      body {
        font-family:
          "Josefin Sans",
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          system-ui,
          sans-serif;
        visibility: hidden;
      }
      body.fonts-loaded {
        visibility: visible;
      }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&family=Pacifico&display=swap"
      rel="stylesheet"
      onload="document.body.classList.add('fonts-loaded')"
    />
    <noscript
      ><link
        href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&family=Pacifico&display=swap"
        rel="stylesheet"
      /></noscript
    >
    <script>
      // Fallback if font loads too slow (show after 100ms)
      setTimeout(() => document.body.classList.add("fonts-loaded"), 100);
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
      <Footer />
    </main>
    <script is:inline>
      function colorMode() {
        // Pr체fe localStorage, sonst System-Pr채ferenz
        const savedTheme = localStorage.getItem("theme");
        const prefersLight = window.matchMedia("(prefers-color-scheme: light)").matches;

        let theme;
        if (savedTheme) {
          theme = savedTheme;
        } else if (prefersLight) {
          theme = "light";
        } else {
          theme = "dark"; // Default oder wenn prefersDark
        }

        if (theme === "light") {
          document.documentElement.classList.add("light");
        } else {
          document.documentElement.classList.remove("light");
        }

        // Speichere die initiale Pr채ferenz
        localStorage.setItem("theme", theme);
      }

      colorMode();
      document.addEventListener("astro:after-swap", colorMode);
    </script>
  </body>
</html>
