---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<!doctype html>
<html transition:animate="none" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      /* Prevent FOUT - Load system fonts immediately, hide body until fonts ready */
      html {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif;
      }
      body {
        font-family:
          "Josefin Sans",
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          system-ui,
          sans-serif;
        visibility: hidden;
      }
      body.fonts-loaded {
        visibility: visible;
      }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&family=Pacifico&display=swap"
      rel="stylesheet"
      onload="document.body.classList.add('fonts-loaded')"
    />
    <noscript
      ><link
        href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&family=Pacifico&display=swap"
        rel="stylesheet"
      /></noscript
    >
    <script>
      // Fallback if font loads too slow (show after 100ms)
      setTimeout(() => document.body.classList.add("fonts-loaded"), 100);
    </script>
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
      <Footer />
    </main>
    <script is:inline>
      function colorMode() {
        // Prüfe localStorage, sonst System-Präferenz
        const savedTheme = localStorage.getItem("theme");
        const prefersLight = window.matchMedia("(prefers-color-scheme: light)").matches;

        let theme;
        if (savedTheme) {
          theme = savedTheme;
        } else if (prefersLight) {
          theme = "light";
        } else {
          theme = "dark"; // Default oder wenn prefersDark
        }

        if (theme === "light") {
          document.documentElement.classList.add("light");
        } else {
          document.documentElement.classList.remove("light");
        }

        // Speichere die initiale Präferenz
        localStorage.setItem("theme", theme);
      }

      colorMode();
      document.addEventListener("astro:after-swap", colorMode);
    </script>
  </body>
</html>
